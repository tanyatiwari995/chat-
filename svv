//user.model.js
import { Schema, model } from "mongoose";

const userSchema = new Schema({
    username: {
        type: String,
        required: true,
        unique: true,
    },
    name: {
        type: String,
        required: true,
    },
    password: {
        type: String,
        required: true,
    },
    profilePicture: {
        type: String,
        default: "",
    },
    gender: {
        type: String,
        enum: ["Male", "Female","Other"],
    },
    
},
    { timestamps: true }
);

const User = model("User", userSchema);
export default User;


//user.js
// src/models/User.js

import mongoose, { Schema, model } from "mongoose";

const userSchema = new Schema({
  username: {
    type: String,
    required: true,
    unique: true,
    trim: true,
  },
  name: {
    type: String,
    required: false,
  },
  password: {
    type: String,
    required: false,
  },
  gender: {
    type: String,
    enum: ["Male", "Female", "Other"],
  },
  profilePicture: {
    type: String,
    default: "",
  },
  socketId: {
    type: String,
    default: null,
  },
}, {
  timestamps: true,
});

const User = mongoose.models.User || model("User", userSchema);
export default User;
